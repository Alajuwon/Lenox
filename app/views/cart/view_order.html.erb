<h1>My Order</h1>

<p id="notice"><%= notice %></p>

<div>
	<% @line_items.each do |line_item| %>
		<ul>
			<li><%= line_item.restaurant_item.name %></li>
			<li><%= number_to_currency line_item.restaurant_item.price %>/ea.</li>
			<li>Qty: <%= line_item.quantity %></li>
			<li>Subtotal: <%= number_to_currency line_item.line_item_total %></li>
		</ul>
	<% end %>

	<p><strong>Total: <%= number_to_currency @sum %></strong></p>
</div>

<div>
	<%= link_to "Place Order", place_order_path, class: "btn btn-success" %>
</div>